<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemsp_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/product_image_content"
            android:src="@drawable/ic_media_24" />


        <TextView
            android:id="@+id/itemsp_gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:text="@string/gia_text"
            android:textColor="@color/purple_price"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemsp_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/ten_san_pham"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>